    <div class="body">
      <%= yield %>
    </div>

    <div id="templates">
      <%= partial 'templates' %>
    </div>

    <div id='user'>
      <button type="tiny button">Challenges</button>
    </div>

    <footer>
      <div class="app">
        <div id="deviceready" class="blink">
          <p class="event listening">Connecting to Device</p>
          <p class="event received">Device is Ready</p>
        </div>
          <p id="geolocation"></p>
      </div>
    </footer>

    <script type="text/javascript">

    $(document).ready(function(){
      $.ajax({
        type: 'POST',
        url: 'http://localhost:3000/api/user/location',
        data: { phone_id: '', location: '' },
        success: function (data) {
          console.log('success', data);
        }
      });

      $('#user').click( function(){ 
        $.ajax({
          type: 'POST',
          url: 'http://localhost:3000/api/user/2/slap',
          data: { phone_id: '1235' },
          success: function (data) {
            console.log('success', data);
          }
        });
      });

      $('#user').on('click', function(){
        $.ajax({
          type: 'POST',
          url: 'http://localhost:3000/api/slap/3/accept',
          data: { target_id: '1234' },
          success: function (data) {
            console.log('success23', data);
          }
        });
      });
    });

